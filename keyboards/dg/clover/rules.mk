BACKLIGHT_ENABLE = yes
BACKLIGHT_DRIVER = pwm
# RGBLIGHT_ENABLE = yes
RGB_MATRIX_ENABLE = yes
RGB_MATRIX_DRIVER = WS2812
# AUDIO_ENABLE = yes
# MIDI_ENABLE = yes
# DIP_SWITCH_ENABLE = yes
ENCODER_ENABLE = yes
VIA_ENABLE = yes
LTO_ENABLE = yes
